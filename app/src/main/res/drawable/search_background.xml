<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Or any color you want for the background -->
    <corners android:radius="16dp"/> <!-- Adjust the corner radius as needed -->

    <!-- Optional: Add a stroke to the shape -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Or any color you want for the border -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="50dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
